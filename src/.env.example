#####################################################################
# Core
#####################################################################
APP_NAME="TwitchClip"
APP_ENV=local
APP_URL=http://localhost:8088
APP_KEY=base64:GENERATED_AT_FIRST_BOOT
APP_DEBUG=true

#####################################################################
# Database (internal Docker network)
#####################################################################
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=laravel
DB_USERNAME=user
DB_PASSWORD=secret

#####################################################################
# Cache / Queue
#####################################################################
CACHE_DRIVER=redis
SESSION_DRIVER=file
QUEUE_CONNECTION=redis
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=null

#####################################################################
# Whisper worker
#####################################################################
WHISPER_URL=http://whisper:9000
WHISPER_DEVICE=GPU

#####################################################################
# Twitch OAuth
#####################################################################
TWITCH_CLIENT_ID=YOUR_TWITCH_CLIENT_ID
TWITCH_CLIENT_SECRET=YOUR_TWITCH_CLIENT_SECRET

#####################################################################
# Mail (optional, logs by default)
#####################################################################
MAIL_MAILER=log
MAIL_FROM_ADDRESS=hello@example.com

#####################################################################
# Optional future integrations (leave blank for now)
#####################################################################
YOUTUBE_API_KEY=
TIKTOK_ACCESS_TOKEN=
INSTAGRAM_APP_ID=
